{% extends 'base.html.twig' %}

{% block title %}New Reservation
{% endblock %}

{% block main %}
	<h1>Create new Reservation</h1>

	<h4 class="margin-top:20px">Current Instrument in reservation :</h4>
	{% if inReservation %}
		<p class="">{{ inReservation|join(', ')}}</p>
	{% else %}
		<p class="text-danger">No instrument in reservation :
			<br>To add some, go to List of instruments, and add to your wishlist</p>
	{% endif %}

	{{ include('reservation/_form.html.twig') }}

	<a href="{{ path('app_local_new') }}" class="btn btn-dark" style="margin-top:10px">Add new location</a>

	<a href="{{ path('home') }}" class="btn btn-dark" style="margin-top:10px">back to home</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Owner
{% endblock %}

{% block main %}
	<h1>Owner</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ owner.getId }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ owner.getName }}</td>
			</tr>
		</tbody>
	</table>
	{% if is_granted('ROLE_USER') %}
		<a href="{{ path('app_owner_edit', {'id': owner.getId}) }}" class="btn btn-primary" style="margin-top:10px">edit</a>
	{% endif %}

	<a href=" {{ path('app_owner_index') }} " class=" btn btn-dark" style=" margin-top:10px">back to list</a>


{% endblock %}

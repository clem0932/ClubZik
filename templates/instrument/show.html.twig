{% extends 'base.html.twig' %}


{% block main %}
	<div class="d-flex justify-content-center">
		<div class="d-flex form-group row">
			<label class="col-sm-2 col-form-label text-muted">Id</label>
			<div class="col-sm-10">
				<div class="form-control form-control-plaintext text-muted">
					{{ instrument.getId }}
				</div>
			</div>

			<div class="d-flex form-group row bg-primary">
				<label class="col-sm-2 col-form-label-lg text-white align-self-center">Name</label>
				<div class="col-sm-10">
					<div class="form-control form-control-plaintext form-control-lg text-white">
						{{ instrument.getName }}
					</div>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Location
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewbox="0 0 16 16">
						<path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
					</svg>
				</label>
				<div class="col-sm-10">
					<div class="form-control form-control-plaintext">
						{{ instrument.getLieu }}
					</div>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Owner
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-person-fill" viewbox="0 0 16 16">
						<path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-1 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm-3 4c2.623 0 4.146.826 5 1.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-1.245C3.854 11.825 5.377 11 8 11z"/>
					</svg>
				</label>
				<div class="col-sm-10">
					<div class="form-control form-control-plaintext">
						{{ instrument.getOwner }}
					</div>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-10">
					<div class="form-control form-control-plaintext" style="height:200px; width:200px">
						{% if vich_uploader_asset(instrument, 'imageFile') == "" %}
							<img src="{{ asset('images/default.jpg') }}" class="img-thumbnail"/>
						{% else %}
							<img src="{{ vich_uploader_asset(instrument, 'imageFile') }}"/>
						{% endif %}
					</div>
				</div>
			</div>

			<a href="{{ path('instrument_edit', {'id': instrument.getId}) }}" class="btn btn-light" style="margin-top:30px">edit</a>
		</div>
		<!-- form-horizontal -->

		<a href="{{ path('instrument_list') }}" class="btn btn-dark fixed-bottom" style="margin-bottom:80px">back to list</a>
	{% endblock %}
